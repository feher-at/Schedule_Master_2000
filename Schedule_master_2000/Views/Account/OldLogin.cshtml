@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

    <div class="container">
        <h1>Login</h1>

        <form enctype="multipart/form-data" asp-controller="Account" asp-action="Login" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="Example@egmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-success" type="submit">Login</button>
                </div>
            </div>
        </form>
    </div>