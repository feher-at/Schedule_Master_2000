@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="col-xl-6 card container mt-5" id="loginCard">
    <h4 class="card-header text-center">Login</h4>

    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Login" method="post" class="mt-3 card-body">
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Example@egmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row text-center">
            <div class="col-sm">
                <button class="btn btn-success m-2" type="submit">Login</button>
            </div>
        </div>

        <div class="card-footer mt-3 font-weight-bold text-center">
            <span>Still don't have an account? Register <a asp-controller="Account" asp-action="Registration">here</a>.</span>
        </div>
    </form>
</div>

