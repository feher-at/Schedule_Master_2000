@model RegistrationViewModel
@{
    ViewData["Title"] = "LoginRegister";
}

    <div class="row">
        <div class="col-xl-2">
        </div>

        <div class="col-xl-4">
            <h1>Registration</h1>

            <form enctype="multipart/form-data" asp-controller="Account" asp-action="Registration" method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Username" class="form-control" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" placeholder="Example@egmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PasswordAgain" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="PasswordAgain" class="form-control" placeholder="Password Again" />
                        <span asp-validation-for="PasswordAgain" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button class="btn btn-primary" type="submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xl-4">
            <h1>Login</h1>

            <form enctype="multipart/form-data" asp-controller="Account" asp-action="Login" method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" placeholder="Example@egmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button class="btn btn-success" type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

