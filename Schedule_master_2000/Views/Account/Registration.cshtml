@model RegistrationViewModel
@{
    ViewData["Title"] = "Registration";
}

<div class="col-xl-6 card container mt-5" id="registrationCard">
    <h4 class="card-header text-center">Registration</h4>

    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Registration" method="post" class="mt-3 card-body">
        <div class="form-group row">
            <label asp-for="Username" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Example@egmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PasswordAgain" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PasswordAgain" class="form-control" placeholder="Password Again" />
                <span asp-validation-for="PasswordAgain" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row text-center">
            <div class="col-sm">
                <button class="btn btn-primary m-2" type="submit">Create</button>
            </div>
        </div>

        <div class="card-footer mt-3 font-weight-bold text-center">
            <span>Already have an account? Log in <a asp-controller="Account" asp-action="Login">here</a>.</span>
        </div>
    </form>
</div>

