@model UserViewModel
@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<form enctype="multipart/form-data" asp-controller="Account" asp-action="CreateUser" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" class="form-control" placeholder="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="example@egmail.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="secret password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Repeat Password</label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="secret password again" />
            <span class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
    </div>
</form>