@model ModifyViewModel
@{
    ViewData["Title"] = "Modify Account Details";
}

<div class="col-xl-6 card container mt-5" id="loginCard">
    <h4 class="card-header text-center">Modify Account Details</h4>

    <form enctype="multipart/form-data" asp-controller="Account" asp-action="ModifyUser" method="post" class="mt-3 card-body">
        <h6 class="card-body text-center text-danger">Do not modify the values you would not like to change.</h6>
        <input asp-for="Modification.Id" type="hidden" value="@Model.User.ID" />
        <div class="form-group row">
            <label asp-for="Modification.Username" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Modification.Username" class="form-control" value="@Model.User.Username" />
                <span asp-validation-for="Modification.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Modification.Email" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Modification.Email" class="form-control" value="@Model.User.Email" />
                <span asp-validation-for="Modification.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Modification.Password" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Modification.Password" class="form-control" type="password" />
                <span asp-validation-for="Modification.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Modification.PasswordAgain" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Modification.PasswordAgain" class="form-control" type="password" />
                <span asp-validation-for="Modification.PasswordAgain" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row text-center">
            <div class="col-sm">
                <button class="btn btn-danger m-2" type="submit">Cancel</button>
                <button class="btn btn-success m-2" type="submit">Accept</button>
            </div>
        </div>
    </form>
</div>