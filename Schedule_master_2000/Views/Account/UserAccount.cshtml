@model User
@{
    ViewData["Title"] = "My Account";
}
<script src="~/js/site.js"></script>
<script>document.addEventListener('DOMContentLoaded', GetUserRole, false);
</script>
<div class="container card mt-3 col-lg-4">
    <div class="card-header display-4">
        <span>Welcome, @Model.Username</span>
    </div>
    <div class="card-body">
        <h5 class="card-text row">Id: @Model.ID</h5>
        <h5 class="card-text row">E-mail: @Model.Email</h5>
        <h5 class="card-text row">Account type: @Model.Role</h5>
    </div>
    <div class="card-footer" id="menu">
        <a asp-controller="Account" asp-action="ModifyUser" class="btn btn-dark">Modify</a>
    </div>
</div>


